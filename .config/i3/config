# dmenu & terms launching {{

# Win (Windows 7/8 style app launch)
# WARN: interferes with $mod+left_mouse_click dragging for resize. 
#bindcode 133  exec dmenu_run -l 20 -fn 'Droid Sans-9:bold' -nb '#333333' -nf '#dedede' -sb '#d64937' -sf '#f9f9f9'

# Win+d -> dmenu
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop --dmenu="dmenu -l 20 -fn 'Cousine-10:regular' -nb '#333333' -nf '#dedede' -sb '#d64937' -sf '#f9f9f9' -i -f " --entry-type=name --entry-type=command

# Win+R -> all cms (`dmenu_run`) (like Windows!; gross?! muscle memory â˜¹
bindsym $mod+r  exec --no-startup-id dmenu_run -l 20 -fn 'Cousine-10:regular' -nb '#333333' -nf '#dedede' -sb '#d64937' -sf '#f9f9f9' -i -f

# start a terminal
bindsym $mod+Return exec "urxvtcd"
# }}}

# change focus# {{{
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# }}}

# layout keys # {{{

# fullscreen
bindsym $mod+f fullscreen

# split in horizontal / vertical, vim-style
#bindsym $mod+s split v
#bindsym $mod+v split h

# change container layout
bindsym $mod+Mod1+x layout stacking
bindsym $mod+Mod1+c layout tabbed
bindsym $mod+Mod1+z layout toggle split

# toggle tiling / floating
bindsym $mod+Mod1+space floating toggle


# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus to parent / child
#bindsym $mod+w focus parent
#bindsym $mod+s focus child

# switch to workspace
bindsym $mod+0 workspace 10
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9

# move focused container to workspace
bindsym $mod+Mod1+0 move container to workspace 10
bindsym $mod+Mod1+1 move container to workspace 1
bindsym $mod+Mod1+2 move container to workspace 2
bindsym $mod+Mod1+3 move container to workspace 3
bindsym $mod+Mod1+4 move container to workspace 4
bindsym $mod+Mod1+5 move container to workspace 5
bindsym $mod+Mod1+6 move container to workspace 6
bindsym $mod+Mod1+7 move container to workspace 7
bindsym $mod+Mod1+8 move container to workspace 8
bindsym $mod+Mod1+9 move container to workspace 9


# layout (stacked, tabbed, toggle split)
#bindsym $
# reload the configuration file
bindsym $mod+Mod1+r reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Mod1+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Mod1+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# L-D-U-R -> move window # {{{
bindsym $mod+Mod1+h move left
bindsym $mod+Mod1+j move down
bindsym $mod+Mod1+k move up
bindsym $mod+Mod1+l move right
bindsym $mod+Mod1+Left move left
bindsym $mod+Mod1+Down move down
bindsym $mod+Mod1+Up move up
bindsym $mod+Mod1+Right move right
# }}}

# Mouse+$mod - drag floating windows {{{
floating_modifier $mod
#}}}

# }}}

# resizing  {{{

mode "resize" {

bindsym h resize shrink width 50 px or 50 ppt
bindsym k resize shrink height 50 px or 50 ppt
bindsym j resize grow height 50 px or 50 ppt
bindsym l resize grow width 50 px or 50 ppt
bindsym Left resize shrink width 50 px or 50 ppt
bindsym Up resize shrink height 50 px or 50 ppt
bindsym Down resize grow height 50 px or 50 ppt
bindsym Right resize grow width 50 px or 50 ppt

# back to normal: Enter or Escape
bindsym Return mode "default"
bindsym Escape mode "default"
bindcode 133 mode "default"
}

bindsym $mod+Mod1+s  mode "resize"
# }}}

