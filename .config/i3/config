# TODO: Default floating = terrible. Fix.
for_window [class="[.]*"] floating enable

# Browsers.
# TODO: Fix this. Iceweasel should tile, except popups and hootlet.
#       xprop output was tiring to diff. Be a big boy and get it done, bitch.
for_window [class="(?i)chromium" instance="(?i)Navigator"] floating disable
for_window [class="(?i)iceweasel" instance="(?i)Navigator"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [class="(?i)iceweasel" instance="(?i)Dialog"] floating enable

# Float.
for_window [class="(?i)Nemo"] floating enable
for_window [class="(?i)hamster-time-tracker"] floating enable
for_window [class="(?i)calc"] floating enable
for_window [class="(?i)icedove"] floating disable
for_window [class="(?i)transmission-remote-gtk"] floating enable
for_window [class="(?i)pavucontrol"] floating enable
for_window [class="(?i)paprefs"] floating enable

# Tile.
# Dear i3, Don't you dare float a terminal by default. I'll vomit.
for_window [class="(?i)urxv*"] floating disable
for_window [class="(?i)gvim"] floating disable
